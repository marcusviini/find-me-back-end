{
    "name": "backend",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "author": "author",
    "license": "ISC",
    "scripts": {
        "copy:unix": "cp -r -u ./src/main/pb/* ./deploy/main/pb",
        "copy:windows": "xcopy /s /Y .\\src\\main\\pb\\* .\\deploy\\main\\pb\\",
        "dev": "nodemon src/main/server.js",
        "start:unix": "npm install && npm run deploy && npm run copy:unix && npm run prod && pm2 log",
        "start:windows": "npm install && npm run deploy && npm run copy:windows && npm run prod && pm2 log",
        "prod": "pm2 start deploy/main/server.js --name BACK-END-GRPC",
        "reload": "pm2 reload server",
        "deploy": "sucrase ./src -d ./deploy --transforms imports",
        "test:cov": "yarn jest --passWithNoTests --silent --runInBand --detectOpenHandles --coverage -c jest-unit.config.js",
        "test:unit": "yarn jest --passWithNoTests --silent --runInBand --detectOpenHandles -c jest-unit.config.js",
        "test:staged": "yarn jest --passWithNoTests --silent --runInBand --detectOpenHandle --findRelatedTests --silent -c jest-unit.config.js",
        "pretest:integration": "cross-env NODE_ENV=test yarn migrate",
        "test:integration": "cross-env NODE_ENV=test yarn jest --watch -c jest-integration-config.js --detectOpenHandles",
        "posttest:integration": "cross-env NODE_ENV=test yarn migration:undo",
        "pretest:repository": "cross-env NODE_ENV=test yarn migrate",
        "test:repository": "cross-env NODE_ENV=test yarn jest --watch -c jest-repository-config.js --detectOpenHandles",
        "posttest:repository": "cross-env NODE_ENV=test yarn migration:undo"
    },
    "dependencies": {
        "@babel/core": "^7.12.10",
        "@grpc/proto-loader": "^0.5.6",
        "@types/express": "^4.17.11",
        "axios": "^0.21.1",
        "bcrypt": "^5.0.1",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-rate-limit": "^5.2.3",
        "grpc": "^1.24.10",
        "helmet": "^4.4.1",
        "https": "^1.0.0",
        "mongoose": "^6.3.1",
        "nodemon": "^2.0.7",
        "pm2": "^5.2.0",
        "sucrase": "^3.17.0",
        "supertest": "^6.1.3",
        "swagger-ui-express": "^4.1.6"
    },
    "devDependencies": {
        "@jest-mock/express": "^1.3.0",
        "@sucrase/jest-plugin": "^2.0.0",
        "@types/jest": "^26.0.20",
        "babel-jest": "^26.6.3",
        "cross-env": "^7.0.3",
        "eslint": "^7.18.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-prettier-config": "^1.0.1",
        "git-commit-msg-linter": "^3.0.0",
        "husky": "^4.3.8",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.3",
        "mock-req-res": "^1.2.0",
        "prettier": "^2.2.1",
        "sinon": "^9.2.4",
        "ts-jest": "^26.4.4"
    }
}
